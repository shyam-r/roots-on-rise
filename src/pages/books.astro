---
import Layout from '../layouts/Layout.astro';
import { BookSeriesCard, Button, Section, SectionHeader } from '@/components/ui';
import LotusAccent from '@/components/patterns/LotusAccent.astro';
import ExitIntentPopup from '@/components/ExitIntentPopup.astro';
import MobileStickyBuy from '@/components/MobileStickyBuy.astro';
import {
  BOOKS,
  BOOK_SERIES,
  HINDU_DEITIES_FAQ,
  SHLOKA_MANTRA_FAQ,
  GENERAL_FAQ,
  getBooksBySeriesId,
  getFAQBySeriesId,
  getAmazonUrl,
  generateProductSchema,
  generateBreadcrumbSchema,
  generateFAQSchema
} from '@/data/products';
import { getLandingPagesByCategory } from '@/data/landing-pages';

const deityPages = getLandingPagesByCategory('deity');
const festivalPages = getLandingPagesByCategory('festival');
const topicPages = getLandingPagesByCategory('topic');

// Use centralized book data - grouped by series
const allBooks = BOOKS;
const bookSeries = BOOK_SERIES;

// Generate schemas for SEO - combine all FAQs for rich results
const breadcrumbSchema = generateBreadcrumbSchema('Books', '/books');
const allFAQs = [...HINDU_DEITIES_FAQ, ...SHLOKA_MANTRA_FAQ, ...GENERAL_FAQ];
const faqSchema = generateFAQSchema(allFAQs);
---

<Layout
  title="Hindu Gods Books & Shloka Books for Kids ‚Äî Board Books, Paperbacks & Kindle | Roots On Rise"
  description="Hindu mythology books for children: Ganesha, Krishna, Shiva & more. Shloka and mantra books with Sanskrit pronunciation. Board books for toddlers, paperbacks & Kindle. Diwali gifts ages 2-14."
  image="/images/books-optimized/marvelous-hindu-deities/boardbook/hero-shot-1-hero.webp"
>
  <!-- Structured Data: Products, Breadcrumbs, FAQ -->
  <script slot="structured-data" type="application/ld+json" set:html={JSON.stringify(generateProductSchema(allBooks))} />
  <script slot="structured-data" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  <script slot="structured-data" type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <!-- Hero -->
  <Section background="tertiary" container="md">
    <div class="text-center relative">
      <div class="hidden md:block absolute left-0 top-1/2 -translate-y-1/2">
        <LotusAccent variant="outline" size="lg" opacity={0.25} />
      </div>
      <div class="hidden md:block absolute right-0 top-1/2 -translate-y-1/2">
        <LotusAccent variant="outline" size="lg" opacity={0.25} rotation={180} />
      </div>
      <h1 class="font-title font-bold text-4xl md:text-5xl text-dark mb-6">
        children's <span class="text-primary">books</span>
      </h1>
      <p class="text-dark/70 text-lg max-w-2xl mx-auto">
        Introduce your children to Hindu mythology, sacred shlokas, and Sanskrit mantras with our beautifully illustrated books featuring Ganesha, Krishna, Lakshmi, and more. Available on Amazon with free Prime delivery.
      </p>
    </div>
  </Section>

  <!-- Books List - Grouped by Series -->
  <Section>
    <div class="space-y-16">
      {bookSeries.map((series, index) => {
        const seriesBooks = getBooksBySeriesId(series.id);
        const faqId = series.id === 'marvelous-hindu-deities' ? 'faq-hindu-deities' : 'faq-shloka-mantra';
        return (
          <div class={index < bookSeries.length - 1 ? "pb-16 border-b border-dark/10" : ""}>
            <BookSeriesCard
              series={series}
              books={seriesBooks}
              reverse={index % 2 !== 0}
              client:load
            />
            <!-- FAQ Link -->
            <div class={`mt-4 ${index % 2 !== 0 ? 'text-right' : 'text-left'}`}>
              <a
                href={`#${faqId}`}
                class="inline-flex items-center gap-1.5 text-sm text-primary hover:text-primary-dark transition-colors group"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="group-hover:underline">Frequently Asked Questions about this book</span>
                <svg class="w-3 h-3 transition-transform group-hover:translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                </svg>
              </a>
            </div>
          </div>
        );
      })}
    </div>
  </Section>

  <!-- Format Comparison Table -->
  <Section background="tertiary">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="font-title font-bold text-2xl md:text-3xl text-dark mb-4">
          compare <span class="text-primary">formats</span>
        </h2>
        <p class="text-dark/60 max-w-xl mx-auto">
          Not sure which edition to choose? Here's a quick comparison to help you decide.
        </p>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-xl shadow-sm text-sm md:text-base">
          <thead>
            <tr class="border-b border-dark/10">
              <th class="text-left py-4 px-4 font-title font-bold text-dark">Feature</th>
              <th class="text-center py-4 px-3 font-title font-bold bg-lime/10 text-lime rounded-t-lg">Board Book</th>
              <th class="text-center py-4 px-3 font-title font-bold bg-sky/10 text-sky rounded-t-lg">Hardcover</th>
              <th class="text-center py-4 px-3 font-title font-bold bg-marigold/10 text-amber-700 rounded-t-lg">Paperback</th>
              <th class="text-center py-4 px-3 font-title font-bold bg-coral/10 text-coral rounded-t-lg">Kindle</th>
            </tr>
          </thead>
          <tbody class="text-dark/80">
            <tr class="border-b border-dark/5 bg-tertiary/50">
              <td class="py-3 px-4 font-medium">Available For</td>
              <td class="py-3 px-3 text-center text-xs">Hindu Deities</td>
              <td class="py-3 px-3 text-center text-xs">Shloka & Mantra</td>
              <td class="py-3 px-3 text-center text-xs">Both books</td>
              <td class="py-3 px-3 text-center text-xs">Both books</td>
            </tr>
            <tr class="border-b border-dark/5">
              <td class="py-3 px-4 font-medium">Best Age</td>
              <td class="py-3 px-3 text-center font-semibold">2-5 years</td>
              <td class="py-3 px-3 text-center">3-8 years</td>
              <td class="py-3 px-3 text-center">3-8 years</td>
              <td class="py-3 px-3 text-center">Any age</td>
            </tr>
            <tr class="border-b border-dark/5">
              <td class="py-3 px-4 font-medium">Pages</td>
              <td class="py-3 px-3 text-center">24 thick</td>
              <td class="py-3 px-3 text-center">78 + coloring</td>
              <td class="py-3 px-3 text-center">32-67</td>
              <td class="py-3 px-3 text-center">Digital</td>
            </tr>
            <tr class="border-b border-dark/5">
              <td class="py-3 px-4 font-medium">Durability</td>
              <td class="py-3 px-3 text-center font-semibold text-primary">‚òÖ‚òÖ‚òÖ Toddler-proof</td>
              <td class="py-3 px-3 text-center">‚òÖ‚òÖ‚òÖ Premium</td>
              <td class="py-3 px-3 text-center">‚òÖ‚òÖ Good</td>
              <td class="py-3 px-3 text-center text-dark/40">N/A</td>
            </tr>
            <tr class="border-b border-dark/5">
              <td class="py-3 px-4 font-medium">Bonus Content</td>
              <td class="py-3 px-3 text-center text-dark/40">‚Äî</td>
              <td class="py-3 px-3 text-center font-semibold text-primary">Coloring pages</td>
              <td class="py-3 px-3 text-center text-dark/40">‚Äî</td>
              <td class="py-3 px-3 text-center text-dark/40">‚Äî</td>
            </tr>
            <tr class="border-b border-dark/5">
              <td class="py-3 px-4 font-medium">Best as Gift</td>
              <td class="py-3 px-3 text-center font-semibold text-primary">‚òÖ‚òÖ‚òÖ Perfect</td>
              <td class="py-3 px-3 text-center font-semibold text-primary">‚òÖ‚òÖ‚òÖ Perfect</td>
              <td class="py-3 px-3 text-center">‚òÖ‚òÖ Good</td>
              <td class="py-3 px-3 text-center text-dark/50">Not ideal</td>
            </tr>
            <tr class="bg-primary/5">
              <td class="py-4 px-4 font-bold text-dark">Recommendation</td>
              <td class="py-4 px-3 text-center font-bold text-primary">First-time readers</td>
              <td class="py-4 px-3 text-center font-medium">Growing readers</td>
              <td class="py-4 px-3 text-center font-medium">Travel reading</td>
              <td class="py-4 px-3 text-center font-medium text-dark/50">Quick preview</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Quick CTA after comparison -->
      <div class="mt-10 text-center p-6 bg-white rounded-xl shadow-sm border-2 border-primary/20">
        <p class="font-title font-bold text-xl text-dark mb-2">
          Can't decide? Start with the <a href={getAmazonUrl('8195870724')} target="_blank" rel="noopener" class="text-primary hover:text-primary-dark underline underline-offset-2">Board Book</a>!
        </p>
        <p class="text-dark/60 text-sm mb-4">
          Our bestselling edition ‚Äî perfect for little hands, beloved by families worldwide.
        </p>
        <Button variant="amazon" size="md" asChild>
          <a href={getAmazonUrl('8195870724')} target="_blank" rel="noopener">
            Get It With Free Prime Delivery
          </a>
        </Button>
      </div>
    </div>
  </Section>

  <!-- FAQ Section - Per Book Series -->
  <Section>
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="font-title font-bold text-2xl md:text-3xl text-dark mb-4">
          frequently asked <span class="text-primary">questions</span>
        </h2>
        <p class="text-dark/60 max-w-xl mx-auto">
          Common questions from parents and gift-givers about our books.
        </p>
      </div>

      <!-- The Marvelous Hindu Deities FAQ -->
      <div id="faq-hindu-deities" class="mb-12 scroll-mt-32">
        <h3 class="font-title font-bold text-lg text-primary mb-4 flex items-center gap-2">
          <span class="w-8 h-8 bg-marigold/20 rounded-full flex items-center justify-center text-sm">üìñ</span>
          The Marvelous Hindu Deities
        </h3>
        <div class="space-y-4">
          {HINDU_DEITIES_FAQ.map((faq) => (
            <details class="group bg-tertiary rounded-xl p-5 cursor-pointer">
              <summary class="font-title font-semibold text-dark flex items-center justify-between list-none text-sm md:text-base">
                <span>{faq.question}</span>
                <span class="text-primary transition-transform group-open:rotate-45 text-xl font-light ml-4 flex-shrink-0">+</span>
              </summary>
              <p class="mt-3 text-dark/70 leading-relaxed text-sm">
                {faq.answer}
              </p>
            </details>
          ))}
        </div>
      </div>

      <!-- My Little Shloka and Mantra Book FAQ -->
      <div id="faq-shloka-mantra" class="mb-12 scroll-mt-32">
        <h3 class="font-title font-bold text-lg text-primary mb-4 flex items-center gap-2">
          <span class="w-8 h-8 bg-sky/20 rounded-full flex items-center justify-center text-sm">üôè</span>
          My Little Shloka and Mantra Book
        </h3>
        <div class="space-y-4">
          {SHLOKA_MANTRA_FAQ.map((faq) => (
            <details class="group bg-tertiary rounded-xl p-5 cursor-pointer">
              <summary class="font-title font-semibold text-dark flex items-center justify-between list-none text-sm md:text-base">
                <span>{faq.question}</span>
                <span class="text-primary transition-transform group-open:rotate-45 text-xl font-light ml-4 flex-shrink-0">+</span>
              </summary>
              <p class="mt-3 text-dark/70 leading-relaxed text-sm">
                {faq.answer}
              </p>
            </details>
          ))}
        </div>
      </div>

      <!-- General FAQ -->
      <div>
        <h3 class="font-title font-bold text-lg text-dark/70 mb-4 flex items-center gap-2">
          <span class="w-8 h-8 bg-lime/15 rounded-full flex items-center justify-center text-sm">‚ùì</span>
          General Questions
        </h3>
        <div class="space-y-4">
          {GENERAL_FAQ.map((faq) => (
            <details class="group bg-tertiary rounded-xl p-5 cursor-pointer">
              <summary class="font-title font-semibold text-dark flex items-center justify-between list-none text-sm md:text-base">
                <span>{faq.question}</span>
                <span class="text-primary transition-transform group-open:rotate-45 text-xl font-light ml-4 flex-shrink-0">+</span>
              </summary>
              <p class="mt-3 text-dark/70 leading-relaxed text-sm">
                {faq.answer}
              </p>
            </details>
          ))}
        </div>
      </div>
    </div>
  </Section>

  <!-- Explore More - Internal links to landing pages -->
  <Section background="tertiary">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-10">
        <h2 class="font-title font-bold text-2xl md:text-3xl text-dark mb-4">
          explore <span class="text-primary">more</span>
        </h2>
        <p class="text-dark/60 max-w-xl mx-auto">
          Dive deeper into Hindu mythology, deities, festivals, and cultural traditions for children.
        </p>
      </div>

      <!-- Deities -->
      <div class="mb-8">
        <h3 class="font-title font-semibold text-sm uppercase tracking-wider text-primary mb-3">Meet the Deities</h3>
        <div class="flex flex-wrap gap-2">
          {deityPages.map((p) => (
            <a
              href={`/${p.slug}`}
              class="px-4 py-2 bg-primary/[0.08] rounded-full text-sm text-primary/80 border border-primary/20 hover:bg-primary hover:text-white hover:border-primary transition-colors"
            >
              {p.heading.replace('discover ', '').replace('goddess ', '').replace('lord ', '')}
            </a>
          ))}
        </div>
      </div>

      <!-- Festivals -->
      <div class="mb-8">
        <h3 class="font-title font-semibold text-sm uppercase tracking-wider text-primary mb-3">Festivals & Celebrations</h3>
        <div class="flex flex-wrap gap-2">
          {festivalPages.map((p) => (
            <a
              href={`/${p.slug}`}
              class="px-4 py-2 bg-coral/10 rounded-full text-sm text-coral border border-coral/20 hover:bg-coral hover:text-white hover:border-coral transition-colors"
            >
              {p.heading.replace('celebrate ', '').replace('the perfect ', '').replace(' with kids', '').replace(' gift', ' gifts')}
            </a>
          ))}
        </div>
      </div>

      <!-- Topics -->
      <div>
        <h3 class="font-title font-semibold text-sm uppercase tracking-wider text-primary mb-3">Learn More</h3>
        <div class="flex flex-wrap gap-2">
          {topicPages.map((p) => (
            <a
              href={`/${p.slug}`}
              class="px-4 py-2 bg-lime/10 rounded-full text-sm text-lime border border-lime/20 hover:bg-lime hover:text-white hover:border-lime transition-colors"
            >
              {p.heading}
            </a>
          ))}
        </div>
      </div>
    </div>
  </Section>

  <!-- Final CTA Section -->
  <Section background="dark" container="md">
    <div class="text-center">
      <h2 class="font-title font-bold text-2xl md:text-3xl text-light mb-4">
        Ready to start your <span class="text-primary">cultural journey</span>?
      </h2>
      <p class="text-light/70 max-w-xl mx-auto mb-8">
        Give your children the gift of understanding their rich heritage through beautifully illustrated stories.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <Button variant="amazon" size="lg" asChild>
          <a href={getAmazonUrl('8195870724')} target="_blank" rel="noopener">
            Shop Hindu Deities Book
          </a>
        </Button>
        <Button variant="outlineLight" size="lg" asChild>
          <a href={getAmazonUrl('B0GH1Z46BD')} target="_blank" rel="noopener">
            Shop Shloka Book
          </a>
        </Button>
      </div>
    </div>
  </Section>

  <!-- Conversion Components -->
  <ExitIntentPopup bookId={4} />
  <MobileStickyBuy />
</Layout>
