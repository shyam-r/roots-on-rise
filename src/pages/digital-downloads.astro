---
import Layout from '../layouts/Layout.astro';
import ExitIntentPopup from '@/components/ExitIntentPopup.astro';
import MobileStickyBuy from '@/components/MobileStickyBuy.astro';
import DarkCtaSection from '@/components/DarkCtaSection.astro';
import { getAmazonUrl, BOOK_SERIES, getBooksBySeriesId } from '@/data/products';
import { getOptimizedImage } from '@/lib/images';
import { DOWNLOADS, DOWNLOAD_FEATURES, DOWNLOAD_STEPS, DOWNLOAD_CATEGORIES } from '@/data/downloads';
import {
  Section,
  SectionHeader,
  Button,
  DownloadCard,
  FeatureCard,
} from '@/components/ui';
---

<Layout
  title="Free Hindu Coloring Sheets — Mandalas, Temples, Sacred Symbols for Kids | Roots On Rise"
  description="14 free printable Hindu coloring sheets: Ganesha mandalas, Om symbols, Kedarnath temple, Shiva's trishul, diya, and more. Instant download, no signup. Perfect for Diwali and cultural learning."
  showAnnouncement={false}
>
  <!-- Hero -->
  <Section background="gradient" container="md">
    <div class="text-center">
      <span class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-sm font-bold px-4 py-1.5 rounded-full mb-5 shadow-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        100% Free — No Signup
      </span>
      <h1 class="font-title font-bold text-4xl md:text-5xl text-dark mb-6">
        <span class="text-primary">free</span> coloring sheets
      </h1>
      <p class="text-dark/70 text-lg max-w-2xl mx-auto">
        14 beautiful Hindu coloring pages — mandalas, temples, sacred symbols, and more.
        Click, download, print, and color!
      </p>
    </div>
  </Section>

  <!-- Features -->
  <Section background="light" padding="sm" container="lg">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
      {DOWNLOAD_FEATURES.map((feature) => (
        <div class="p-4 text-center">
          <div class="w-14 h-14 mx-auto mb-3 rounded-2xl bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
            {feature.icon === "heart" && (
              <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg>
            )}
            {feature.icon === "zap" && (
              <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" /></svg>
            )}
            {feature.icon === "printer" && (
              <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 9V2h12v7M6 18H4a2 2 0 01-2-2v-5a2 2 0 012-2h16a2 2 0 012 2v5a2 2 0 01-2 2h-2M6 14h12v8H6z" /></svg>
            )}
            {feature.icon === "palette" && (
              <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.93 0 1.5-.67 1.5-1.5 0-.39-.15-.74-.39-1.01-.23-.26-.38-.61-.38-1 0-.83.67-1.5 1.5-1.5H16c3.31 0 6-2.69 6-6 0-5.5-4.5-9.99-10-9.99z" /><circle cx="7.5" cy="11.5" r="1.5" fill="currentColor" /><circle cx="12" cy="7.5" r="1.5" fill="currentColor" /><circle cx="16.5" cy="11.5" r="1.5" fill="currentColor" /></svg>
            )}
          </div>
          <h3 class="font-semibold text-dark mb-1">{feature.title}</h3>
          <p class="text-dark/60 text-sm">{feature.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Products Grid - Grouped by Category -->
  <Section>
    <SectionHeader
      title="coloring sheets"
      highlight="coloring"
      description="Beautifully designed coloring sheets featuring Hindu deities, mandalas, sacred places, and cultural symbols. Click to download instantly!"
    />

    {/* Group downloads by category */}
    {DOWNLOAD_CATEGORIES.map((category) => {
      const categoryDownloads = DOWNLOADS.filter(d => d.category === category);
      if (categoryDownloads.length === 0) return null;
      return (
        <div class="mb-12 last:mb-0">
          <h3 class="font-title font-semibold text-sm uppercase tracking-wider text-primary mb-4">{category}</h3>
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {categoryDownloads.map((product) => (
              <DownloadCard
                title={product.title}
                description={product.description}
                image={product.image}
                downloadUrl={product.downloadUrl}
                category={product.category}
              />
            ))}
          </div>
        </div>
      );
    })}
  </Section>

  <!-- Book Bridge — convert free downloaders to book buyers -->
  <Section background="gradientWarm" container="lg">
    <div class="text-center mb-8">
      <h2 class="font-title font-bold text-2xl md:text-3xl text-dark mb-3">
        love these <span class="text-primary">coloring pages</span>?
      </h2>
      <p class="text-dark/60 max-w-lg mx-auto">See these deities, symbols, and stories come to life in our beautifully illustrated books!</p>
      <div class="flex items-center justify-center gap-2 mt-2">
        <span class="text-amber-500 text-sm">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
        <span class="text-dark/50 text-xs">Loved by families worldwide</span>
      </div>
    </div>
    <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto">
      {BOOK_SERIES.map((series) => {
        const books = getBooksBySeriesId(series.id);
        const book = books[0];
        const format = series.formats[0];
        if (!book || !format) return null;
        return (
          <a href={getAmazonUrl(format.asin || '')} target="_blank" rel="noopener"
            class="flex items-center gap-4 bg-white rounded-2xl p-4 border border-dark/5 hover:shadow-lg transition-all group">
            <div class="w-20 h-24 shrink-0 rounded-xl overflow-hidden shadow-md bg-tertiary">
              <img src={getOptimizedImage(book.image, 'thumb')} alt={series.name} class="w-full h-full object-cover" loading="lazy" />
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-title font-bold text-dark group-hover:text-primary transition-colors text-sm md:text-base">{series.name}</p>
              <p class="text-dark/50 text-xs mt-1 line-clamp-2">{series.description}</p>
              <div class="flex items-center gap-3 mt-2">
                <span class="text-primary font-bold text-sm">{format.price}</span>
                <span class="inline-flex items-center gap-1 px-2 py-0.5 bg-[#FF9900]/10 text-[#FF9900] text-xs font-semibold rounded">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                  Free Prime Delivery
                </span>
              </div>
            </div>
          </a>
        );
      })}
    </div>
  </Section>

  <!-- How to Use -->
  <Section background="tertiary" container="md">
    <SectionHeader
      title="how to use"
      highlight="how"
    />

    <div class="grid md:grid-cols-3 gap-8">
      {DOWNLOAD_STEPS.map((item) => (
        <FeatureCard
          icon=""
          title={item.title}
          description={item.description}
          variant="numbered"
          number={item.step}
        />
      ))}
    </div>
  </Section>

  <!-- Share Section -->
  <Section background="light" container="sm">
    <div class="text-center">
      <h2 class="font-title font-bold text-2xl text-dark mb-4">
        Enjoying our <span class="text-primary">free downloads</span>?
      </h2>
      <p class="text-dark/70 mb-8">
        Share with friends and family! Tag us on social media with your colored creations.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="https://www.instagram.com/rootsonrise"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          Follow @rootsonrise
        </a>
      </div>
    </div>
  </Section>

  <!-- CTA -->
  <DarkCtaSection
    title="Want more cultural content?"
    highlight="cultural content"
    description={`Check out our bestselling children's book "The Marvelous Hindu Deities" - 10 beautifully illustrated deities with stories your kids will love!`}
  >
    <Button variant="amazon" size="lg" asChild>
      <a
        href={getAmazonUrl('8195870724')}
        target="_blank"
        rel="noopener"
      >
        Get the Book With Prime Delivery
      </a>
    </Button>
  </DarkCtaSection>

  <!-- Conversion tools -->
  <ExitIntentPopup bookId={4} />
  <MobileStickyBuy />
</Layout>
