---
import Layout from '../layouts/Layout.astro';

// Digital download products - FREE downloads
const downloads = [
  {
    title: "Ganesha Mandala Coloring Sheet",
    description: "Intricate mandala design featuring Lord Ganesha. Perfect for mindful coloring.",
    image: "/images/downloads/ganesha-mandala.png",
    downloadUrl: "/images/downloads/ganesha-mandala.png",
    category: "Coloring Sheets"
  },
  {
    title: "Om Symbol Mandala",
    description: "Sacred Om symbol surrounded by intricate mandala patterns.",
    image: "/images/downloads/om-mandala.png",
    downloadUrl: "/images/downloads/om-mandala.png",
    category: "Coloring Sheets"
  },
  {
    title: "Musical Instruments Coloring Pack",
    description: "Traditional Indian instruments - tabla, sitar, veena and more.",
    image: "/images/downloads/musical-instruments.png",
    downloadUrl: "/images/downloads/musical-instruments.png",
    category: "Coloring Sheets"
  },
  {
    title: "Intricate Om Mandala",
    description: "Advanced mandala design for experienced colorists.",
    image: "/images/downloads/intricate-om.png",
    downloadUrl: "/images/downloads/intricate-om.png",
    category: "Coloring Sheets"
  }
];
---

<Layout
  title="Free Digital Downloads - Coloring Sheets & Activities | Roots On Rise"
  description="Download free Hindu cultural coloring sheets, mandalas, and educational activities. Instant PDF downloads for mindful coloring and learning."
>
  <!-- Hero -->
  <section class="bg-gradient-to-b from-tertiary to-light py-16 px-5">
    <div class="max-w-4xl mx-auto text-center">
      <span class="inline-block bg-green-500 text-white text-sm font-semibold px-4 py-1 rounded-full mb-4">
        100% Free
      </span>
      <h1 class="font-title font-bold text-4xl md:text-5xl text-dark mb-6">
        <span class="text-primary">free</span> downloads
      </h1>
      <p class="text-dark/70 text-lg max-w-2xl mx-auto">
        Beautiful coloring sheets, mandalas, and educational activities featuring Hindu cultural themes.
        Download instantly and print at home - completely free!
      </p>
    </div>
  </section>

  <!-- Features -->
  <section class="py-12 px-5 bg-light">
    <div class="max-w-5xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div class="p-4">
          <div class="w-12 h-12 bg-tertiary rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl">üÜì</span>
          </div>
          <h3 class="font-semibold text-dark mb-1">Always Free</h3>
          <p class="text-dark/60 text-sm">No payment required, ever</p>
        </div>
        <div class="p-4">
          <div class="w-12 h-12 bg-tertiary rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl">‚ö°</span>
          </div>
          <h3 class="font-semibold text-dark mb-1">Instant Access</h3>
          <p class="text-dark/60 text-sm">Download immediately, no signup</p>
        </div>
        <div class="p-4">
          <div class="w-12 h-12 bg-tertiary rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl">üñ®Ô∏è</span>
          </div>
          <h3 class="font-semibold text-dark mb-1">Print at Home</h3>
          <p class="text-dark/60 text-sm">High-resolution for quality prints</p>
        </div>
        <div class="p-4">
          <div class="w-12 h-12 bg-tertiary rounded-full flex items-center justify-center mx-auto mb-3">
            <span class="text-2xl">üé®</span>
          </div>
          <h3 class="font-semibold text-dark mb-1">Cultural Art</h3>
          <p class="text-dark/60 text-sm">Authentic Hindu cultural designs</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-16 px-5">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="font-title font-bold text-3xl md:text-4xl text-dark mb-4">
          <span class="text-primary">coloring</span> sheets
        </h2>
        <p class="text-dark/60 max-w-xl mx-auto">
          Beautifully designed coloring sheets featuring Hindu deities, mandalas, and cultural symbols.
          Click to download instantly!
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {downloads.map((product) => (
          <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 h-full flex flex-col group">
            <div class="aspect-square relative overflow-hidden bg-tertiary">
              <img
                src={product.image}
                alt={product.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
              <div class="absolute top-3 right-3 bg-green-500 text-white text-sm font-bold px-3 py-1 rounded-full">
                FREE
              </div>
            </div>
            <div class="p-5 flex flex-col flex-1">
              <span class="text-xs text-primary font-semibold uppercase tracking-wide mb-1">
                {product.category}
              </span>
              <h3 class="font-title font-bold text-lg text-dark mb-2">
                {product.title}
              </h3>
              <p class="text-dark/60 text-sm flex-1">{product.description}</p>
              <div class="mt-4 pt-4 border-t border-gray-100">
                <a
                  href={product.downloadUrl}
                  download
                  class="w-full inline-flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-semibold py-3 px-4 rounded-lg transition-colors"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                  </svg>
                  Download Free
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- How to Use -->
  <section class="py-16 px-5 bg-tertiary">
    <div class="max-w-4xl mx-auto">
      <h2 class="font-title font-bold text-2xl text-dark mb-12 text-center">
        <span class="text-primary">how</span> to use
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-light rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            1
          </div>
          <h3 class="font-title font-bold text-lg text-dark mb-2">Click Download</h3>
          <p class="text-dark/60 text-sm">
            Click the download button on any design you like. No signup needed!
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-light rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            2
          </div>
          <h3 class="font-title font-bold text-lg text-dark mb-2">Print at Home</h3>
          <p class="text-dark/60 text-sm">
            Print the image on your home printer. Works great on regular paper!
          </p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary text-light rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            3
          </div>
          <h3 class="font-title font-bold text-lg text-dark mb-2">Color & Enjoy</h3>
          <p class="text-dark/60 text-sm">
            Grab your favorite colors and start your mindful coloring journey!
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Share Section -->
  <section class="py-16 px-5 bg-light">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="font-title font-bold text-2xl text-dark mb-4">
        Enjoying our <span class="text-primary">free downloads</span>?
      </h2>
      <p class="text-dark/70 mb-8">
        Share with friends and family! Tag us on social media with your colored creations.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="https://www.instagram.com/rootsonrise"
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          Follow @rootsonrise
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 px-5 bg-dark text-light text-center">
    <h2 class="font-title font-bold text-2xl md:text-3xl mb-4">
      Want more <span class="text-primary">cultural content</span>?
    </h2>
    <p class="text-light/70 max-w-xl mx-auto mb-8">
      Check out our bestselling children's book "The Marvelous Hindu Deities" -
      10 beautifully illustrated deities with stories your kids will love!
    </p>
    <a
      href="https://www.amazon.com/dp/8195870724"
      target="_blank"
      rel="noopener"
      class="amazon-btn text-lg px-8 py-3 inline-block"
    >
      Shop on Amazon
    </a>
  </section>
</Layout>
