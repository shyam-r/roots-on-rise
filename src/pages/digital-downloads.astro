// Features with icons
const features = [
  { icon: "üÜì", title: "Always Free", description: "No payment required, ever" },
  { icon: "‚ö°", title: "Instant Access", description: "Download immediately, no signup" },
  { icon: "üñ®Ô∏è", title: "Print at Home", description: "High-resolution for quality prints" },
