---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import HeroOriginal from '../components/Hero.original.astro';

// Props for comparison
const heroProps = {
  title: "nurturing cultural roots",
  highlight: "cultural",
  subtitle: "Beautifully illustrated books and products that help children discover the rich tapestry of Hindu mythology and heritage.",
  ctaText: "Shop Books",
  ctaLink: "/books",
  secondaryCtaText: "Our Story",
  secondaryCtaLink: "/our-story"
};

// Original hero used different prop names
const originalProps = {
  title: "nurturing cultural roots",
  highlightWord: "cultural",
  description: "Beautifully illustrated books and products that help children discover the rich tapestry of Hindu mythology and heritage.",
  image: "/images/books/marvelous-hindu-deities/Hero_shot_1.jpg",
  ctaText: "Shop Books",
  ctaLink: "/books"
};
---

<Layout title="Component Comparison | Roots On Rise" description="Compare old and new component designs">
  <div class="bg-dark text-light py-4 px-5 text-center sticky top-0 z-50">
    <h1 class="font-title font-bold text-2xl">Component Comparison</h1>
    <p class="text-light/70 text-sm">Old (left) vs New (right) - scroll to compare</p>
  </div>

  <!-- Hero Comparison -->
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-5">
      <h2 class="font-title font-bold text-2xl text-center mb-8 text-dark">
        Hero Section Comparison
      </h2>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Original -->
        <div class="border-2 border-dashed border-gray-300 rounded-lg overflow-hidden">
          <div class="bg-gray-100 px-4 py-2 border-b border-gray-300">
            <span class="text-sm font-semibold text-gray-600">ORIGINAL</span>
          </div>
          <div class="bg-white">
            <HeroOriginal {...originalProps} />
          </div>
        </div>

        <!-- New -->
        <div class="border-2 border-primary rounded-lg overflow-hidden">
          <div class="bg-primary/10 px-4 py-2 border-b border-primary">
            <span class="text-sm font-semibold text-primary">NEW DESIGN</span>
          </div>
          <div class="bg-white">
            <Hero {...heroProps} />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Feature Summary -->
  <section class="py-12 px-5 bg-tertiary">
    <div class="max-w-4xl mx-auto">
      <h2 class="font-title font-bold text-2xl text-center mb-8 text-dark">
        What's New
      </h2>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-bold text-lg mb-3 text-dark">Hero Section</h3>
          <ul class="space-y-2 text-sm text-dark/70">
            <li>✓ Warm gradient backgrounds</li>
            <li>✓ Cultural wave border patterns</li>
            <li>✓ Floating decorative motifs</li>
            <li>✓ CSS entrance animations</li>
            <li>✓ Dual CTA buttons</li>
            <li>✓ Reduced motion support</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-bold text-lg mb-3 text-dark">Navigation</h3>
          <ul class="space-y-2 text-sm text-dark/70">
            <li>✓ Sticky header on scroll</li>
            <li>✓ Slide-in mobile drawer</li>
            <li>✓ Active page indicators</li>
            <li>✓ Scroll progress bar</li>
            <li>✓ Keyboard accessibility</li>
            <li>✓ Animated hamburger icon</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-bold text-lg mb-3 text-dark">Product Cards</h3>
          <ul class="space-y-2 text-sm text-dark/70">
            <li>✓ Hover lift & shadow effects</li>
            <li>✓ Star rating display</li>
            <li>✓ Price with sale support</li>
            <li>✓ Enhanced Coming Soon state</li>
            <li>✓ Quick buy slide-up</li>
            <li>✓ Book format selector</li>
          </ul>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm">
          <h3 class="font-bold text-lg mb-3 text-dark">Design System</h3>
          <ul class="space-y-2 text-sm text-dark/70">
            <li>✓ Extended color palettes</li>
            <li>✓ Typography scale</li>
            <li>✓ Warm shadow system</li>
            <li>✓ PaisleyBorder component</li>
            <li>✓ LotusAccent component</li>
            <li>✓ Gradient utilities</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Actions -->
  <section class="py-12 px-5 text-center">
    <div class="space-x-4">
      <a href="/" class="cta inline-block">View Homepage</a>
      <a href="/books" class="cta bg-transparent border-dark text-dark hover:bg-dark hover:text-light inline-block">
        View Books Page
      </a>
    </div>
  </section>
</Layout>
