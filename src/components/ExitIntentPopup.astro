---
interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
  productImage?: string;
}

const {
  title = "Wait! Don't miss our bestseller",
  description = "The Board Book edition is perfect for little hands â€” durable, colorful, and loved by families worldwide.",
  ctaText = "Get It With Free Prime Delivery",
  ctaLink = "https://www.amazon.com/dp/8195870724?tag=rootsonrise-20",
  productImage = "/images/books/marvelous-hindu-deities/board_book_front_cover.webp"
} = Astro.props;
---

<!-- Exit Intent Popup Overlay -->
<div
  id="exit-popup-overlay"
  class="fixed inset-0 bg-dark/80 backdrop-blur-sm z-[100] opacity-0 pointer-events-none transition-opacity duration-300"
  aria-hidden="true"
></div>

<!-- Exit Intent Popup -->
<div
  id="exit-popup"
  class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-[101] w-[90vw] max-w-md bg-white rounded-2xl shadow-2xl opacity-0 pointer-events-none scale-95 transition-all duration-300"
  role="dialog"
  aria-modal="true"
  aria-labelledby="exit-popup-title"
  aria-hidden="true"
>
  <!-- Close button -->
  <button
    id="exit-popup-close"
    class="absolute top-3 right-3 w-8 h-8 flex items-center justify-center text-dark/50 hover:text-dark hover:bg-dark/5 rounded-full transition-colors"
    aria-label="Close popup"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Content -->
  <div class="p-6 pt-10 text-center">
    <!-- Product image -->
    <div class="w-32 h-32 mx-auto mb-4 rounded-xl overflow-hidden shadow-lg">
      <img
        src={productImage}
        alt="Featured book"
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>

    <h2 id="exit-popup-title" class="font-title font-bold text-xl md:text-2xl text-dark mb-2">
      {title}
    </h2>
    <p class="text-dark/70 text-sm mb-6 max-w-xs mx-auto">
      {description}
    </p>

    <a
      href={ctaLink}
      target="_blank"
      rel="noopener"
      class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#FF9900] hover:bg-[#e68a00] text-white font-semibold rounded-lg transition-colors shadow-md"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      {ctaText}
    </a>

    <p class="text-dark/40 text-xs mt-4">
      Free shipping with Amazon Prime
    </p>
  </div>
</div>

<script>
  // =============================================================================
  // E-commerce Optimized Exit Intent Popup
  // =============================================================================
  // Based on conversion optimization research:
  // 1. Engagement-gated: Only show to users who've spent time + scrolled (qualified leads)
  // 2. Time-based cooldown: 3-day localStorage cooldown, not session-based
  // 3. Mobile support: Scroll-up velocity + idle timeout triggers
  // 4. Respect user choice: Longer cooldown if dismissed, track CTA clicks
  // =============================================================================

  const popup = document.getElementById('exit-popup');
  const overlay = document.getElementById('exit-popup-overlay');
  const closeBtn = document.getElementById('exit-popup-close');
  const ctaLink = popup?.querySelector('a[href*="amazon"]');

  // Configuration
  const CONFIG = {
    STORAGE_KEY: 'exitPopup',
    MIN_TIME_ON_PAGE: 12000,        // 12 seconds minimum engagement
    MIN_SCROLL_DEPTH: 25,           // 25% scroll depth required
    COOLDOWN_DISMISSED: 3,          // 3 days if user closed popup
    COOLDOWN_CLICKED: 14,           // 14 days if user clicked CTA (success!)
    MOBILE_IDLE_TIMEOUT: 45000,     // 45 seconds idle on mobile
    SCROLL_UP_THRESHOLD: -150,      // px/100ms scroll velocity to trigger
  };

  // State
  let isShowing = false;
  let hasTriggered = false;
  let pageLoadTime = Date.now();
  let maxScrollDepth = 0;
  let lastScrollY = 0;
  let lastScrollTime = Date.now();
  let idleTimer: ReturnType<typeof setTimeout> | null = null;
  const isMobile = 'ontouchstart' in window || navigator.maxTouchPoints > 0;

  // =============================================================================
  // Cooldown Logic (localStorage with expiry)
  // =============================================================================

  function getStoredData(): { lastShown: number; action: 'dismissed' | 'clicked' } | null {
    try {
      const data = localStorage.getItem(CONFIG.STORAGE_KEY);
      return data ? JSON.parse(data) : null;
    } catch {
      return null;
    }
  }

  function setStoredData(action: 'dismissed' | 'clicked') {
    try {
      localStorage.setItem(CONFIG.STORAGE_KEY, JSON.stringify({
        lastShown: Date.now(),
        action
      }));
    } catch {
      // localStorage unavailable, fall back to session
      sessionStorage.setItem(CONFIG.STORAGE_KEY, 'true');
    }
  }

  function isInCooldown(): boolean {
    const data = getStoredData();
    if (!data) return false;

    const daysSinceShown = (Date.now() - data.lastShown) / (1000 * 60 * 60 * 24);
    const cooldownDays = data.action === 'clicked'
      ? CONFIG.COOLDOWN_CLICKED
      : CONFIG.COOLDOWN_DISMISSED;

    return daysSinceShown < cooldownDays;
  }

  // =============================================================================
  // Engagement Tracking
  // =============================================================================

  function hasMetEngagementThreshold(): boolean {
    const timeOnPage = Date.now() - pageLoadTime;
    return timeOnPage >= CONFIG.MIN_TIME_ON_PAGE && maxScrollDepth >= CONFIG.MIN_SCROLL_DEPTH;
  }

  function updateScrollDepth() {
    const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
    if (scrollHeight > 0) {
      const currentDepth = (window.scrollY / scrollHeight) * 100;
      maxScrollDepth = Math.max(maxScrollDepth, currentDepth);
    }
  }

  // =============================================================================
  // Show/Hide Popup
  // =============================================================================

  function showPopup() {
    if (isInCooldown() || hasTriggered || isShowing || !hasMetEngagementThreshold()) {
      return;
    }

    hasTriggered = true;
    isShowing = true;

    if (popup && overlay) {
      popup.classList.remove('opacity-0', 'pointer-events-none', 'scale-95');
      popup.classList.add('opacity-100', 'scale-100');
      popup.setAttribute('aria-hidden', 'false');

      overlay.classList.remove('opacity-0', 'pointer-events-none');
      overlay.classList.add('opacity-100');
      overlay.setAttribute('aria-hidden', 'false');

      closeBtn?.focus();
    }
  }

  function hidePopup(action: 'dismissed' | 'clicked' = 'dismissed') {
    if (popup && overlay) {
      popup.classList.add('opacity-0', 'pointer-events-none', 'scale-95');
      popup.classList.remove('opacity-100', 'scale-100');
      popup.setAttribute('aria-hidden', 'true');

      overlay.classList.add('opacity-0', 'pointer-events-none');
      overlay.classList.remove('opacity-100');
      overlay.setAttribute('aria-hidden', 'true');

      isShowing = false;
      setStoredData(action);
    }
  }

  // =============================================================================
  // Desktop: Mouse Exit Intent
  // =============================================================================

  function handleMouseLeave(e: MouseEvent) {
    if (e.clientY <= 0) {
      showPopup();
    }
  }

  // =============================================================================
  // Mobile: Scroll-Up Velocity Detection
  // =============================================================================

  function handleScroll() {
    updateScrollDepth();

    if (isMobile && hasMetEngagementThreshold()) {
      const now = Date.now();
      const timeDelta = now - lastScrollTime;

      if (timeDelta > 50) { // Debounce
        const scrollDelta = window.scrollY - lastScrollY;
        const velocity = (scrollDelta / timeDelta) * 100; // px per 100ms

        // Fast scroll up from below fold = leaving intent
        if (velocity < CONFIG.SCROLL_UP_THRESHOLD && window.scrollY > 200) {
          showPopup();
        }

        lastScrollY = window.scrollY;
        lastScrollTime = now;
      }

      // Reset idle timer on scroll
      resetIdleTimer();
    }
  }

  // =============================================================================
  // Mobile: Idle Timeout (engaged but stopped interacting)
  // =============================================================================

  function resetIdleTimer() {
    if (idleTimer) clearTimeout(idleTimer);

    if (isMobile && hasMetEngagementThreshold() && !hasTriggered) {
      idleTimer = setTimeout(() => {
        showPopup();
      }, CONFIG.MOBILE_IDLE_TIMEOUT);
    }
  }

  // =============================================================================
  // Tab Visibility (user switching away)
  // =============================================================================

  function handleVisibilityChange() {
    if (document.hidden && hasMetEngagementThreshold()) {
      // User is leaving - show on return if they come back
      // This is gentler than showing immediately
    }
  }

  // =============================================================================
  // Initialize
  // =============================================================================

  // Skip if in cooldown
  if (!isInCooldown()) {
    // Track scroll depth
    window.addEventListener('scroll', handleScroll, { passive: true });

    // Desktop: mouse exit
    if (!isMobile) {
      document.addEventListener('mouseleave', handleMouseLeave);
    }

    // Mobile: start idle timer after engagement threshold could be met
    if (isMobile) {
      setTimeout(() => {
        if (hasMetEngagementThreshold()) {
          resetIdleTimer();
        }
      }, CONFIG.MIN_TIME_ON_PAGE);
    }

    // Track tab visibility
    document.addEventListener('visibilitychange', handleVisibilityChange);
  }

  // Close handlers
  closeBtn?.addEventListener('click', () => hidePopup('dismissed'));
  overlay?.addEventListener('click', () => hidePopup('dismissed'));

  // Track CTA clicks for longer cooldown
  ctaLink?.addEventListener('click', () => {
    setStoredData('clicked');
  });

  // Escape key to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isShowing) {
      hidePopup('dismissed');
    }
  });
</script>
