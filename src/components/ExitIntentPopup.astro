---
import { BOOKS, getAmazonUrl } from '@/data/products';

interface Props {
  /** Optional override - if not provided, rotates through popup offers */
  bookId?: number;
  /** Context hint for personalized copy (e.g., deity name from blog post) */
  contextHint?: string;
}

const { bookId, contextHint } = Astro.props;

// Define popup offer configurations for different books
const POPUP_OFFERS = [
  {
    bookId: 4, // Board Book - Hindu Deities
    title: "Wait! Don't miss our bestseller",
    description: "The Board Book edition is perfect for little hands — durable, colorful, and loved by families worldwide.",
    ctaText: "Get It With Free Prime Delivery",
    badge: "Bestseller",
  },
  {
    bookId: 7, // Premium Paperback - Shloka
    title: "Upgrade to Premium Edition",
    description: "81 pages of premium color printing + 10 bonus coloring pages. The complete experience for young learners.",
    ctaText: "Get Premium Edition",
    badge: "Premium",
  },
  {
    bookId: 2, // Standard Paperback - Shloka
    title: "Great value for families",
    description: "Introduce your children to sacred shlokas and mantras with our affordable Standard Edition.",
    ctaText: "Get It Now — Only $9.99",
    badge: "Best Value",
  },
  {
    bookId: 1, // Hardcover - Shloka
    title: "The perfect gift",
    description: "Our premium Hardcover edition with bonus coloring section — ideal for Diwali, birthdays, and special occasions.",
    ctaText: "Get the Gift Edition",
    badge: "Gift Idea",
  },
];

// Select offer: contextHint forces board book (deity context), bookId overrides, otherwise random
const selectedOffer = contextHint
  ? POPUP_OFFERS[0] // Board Book - Hindu Deities (most relevant for deity blog posts)
  : bookId
    ? POPUP_OFFERS.find(o => o.bookId === bookId) || POPUP_OFFERS[0]
    : POPUP_OFFERS[Math.floor(Math.random() * POPUP_OFFERS.length)];

const book = BOOKS.find(b => b.id === selectedOffer.bookId)!;
const productImage = book.image;
const ctaLink = getAmazonUrl(book.asin || book.isbn || '');
---

<!-- Exit Intent Popup Overlay -->
<div
  id="exit-popup-overlay"
  class="fixed inset-0 bg-dark/80 backdrop-blur-sm z-[100] opacity-0 pointer-events-none transition-opacity duration-300"
  aria-hidden="true"
></div>

<!-- Exit Intent Popup -->
<div
  id="exit-popup"
  class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-[101] w-[90vw] max-w-md bg-white rounded-2xl shadow-2xl opacity-0 pointer-events-none scale-95 transition-all duration-300"
  role="dialog"
  aria-modal="true"
  aria-labelledby="exit-popup-title"
  aria-hidden="true"
>
  <!-- Close button -->
  <button
    id="exit-popup-close"
    class="absolute top-3 right-3 w-8 h-8 flex items-center justify-center text-dark/50 hover:text-dark hover:bg-dark/5 rounded-full transition-colors"
    aria-label="Close popup"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>

  <!-- Content -->
  <div class="p-6 pt-10 text-center">
    <!-- Badge -->
    {selectedOffer.badge && (
      <span class="inline-block px-3 py-1 bg-primary/10 text-primary text-xs font-bold rounded-full mb-3">
        {selectedOffer.badge}
      </span>
    )}

    <!-- Product image -->
    <div class="w-36 h-44 mx-auto mb-4 rounded-xl overflow-hidden shadow-lg bg-tertiary">
      <img
        src={productImage}
        alt={book.title}
        class="w-full h-full object-contain p-2"
        loading="lazy"
      />
    </div>

    <h2 id="exit-popup-title" class="font-title font-bold text-xl md:text-2xl text-dark mb-2">
      {contextHint
        ? `Your child will love meeting ${contextHint} in full color`
        : selectedOffer.title}
    </h2>
    <p class="text-dark/70 text-sm mb-4 max-w-xs mx-auto">
      {contextHint
        ? `Bring ${contextHint} and 9 other Hindu deities to life with vibrant illustrations your child will treasure.`
        : selectedOffer.description}
    </p>
    <p class="text-primary font-bold text-lg mb-4">
      ${book.salePrice || book.regularPrice}
    </p>

    <a
      href={ctaLink}
      target="_blank"
      rel="noopener"
      class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#FF9900] hover:bg-[#e68a00] text-white font-semibold rounded-lg transition-colors shadow-md"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
      {selectedOffer.ctaText}
    </a>

    <p class="text-dark/40 text-xs mt-4">
      Free shipping with Amazon Prime
    </p>
  </div>
</div>

<script>
  // =============================================================================
  // Exit Intent Popup - Product Engagement Triggered
  // =============================================================================
  // Trigger conditions:
  // 1. User has viewed products for 10+ seconds, OR
  // 2. User clicked on a product
  // Then: Show popup when user attempts to leave (mouse exit / scroll up / idle)
  // =============================================================================

  const popup = document.getElementById('exit-popup');
  const overlay = document.getElementById('exit-popup-overlay');
  const closeBtn = document.getElementById('exit-popup-close');
  const ctaLink = popup?.querySelector('a[href*="amazon"]');

  // Configuration
  const CONFIG = {
    STORAGE_KEY: 'exitPopup',
    MIN_PRODUCT_VIEW_TIME: 10000,   // 10 seconds viewing products
    MIN_TIME_ON_PAGE: 20000,        // 20 seconds on ANY page (content engagement)
    MIN_SCROLL_DEPTH: 0.3,          // 30% scroll depth (reading engagement)
    COOLDOWN_DISMISSED_MINS: 30,    // 30 minutes after dismissal
    COOLDOWN_CLICKED_DAYS: 7,       // 7 days if user clicked CTA
    MOBILE_IDLE_TIMEOUT: 30000,     // 30 seconds idle on mobile
    SCROLL_UP_THRESHOLD: -100,      // px/100ms scroll velocity to trigger
  };

  // Product selectors to observe
  const PRODUCT_SELECTORS = [
    '.product-card',
    '[data-product]',
    '.book-series-card',
    '[class*="ProductCard"]',
    '[class*="BookCard"]',
  ].join(', ');

  // State
  let isShowing = false;
  let hasTriggered = false;
  let productViewStartTime: number | null = null;
  let totalProductViewTime = 0;
  let hasClickedProduct = false;
  let lastScrollY = 0;
  let lastScrollTime = Date.now();
  let idleTimer: ReturnType<typeof setTimeout> | null = null;
  const isMobile = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
  const pageLoadTime = Date.now();
  let maxScrollDepth = 0;

  // =============================================================================
  // Cooldown Logic (30 min for dismissals, 7 days for CTA clicks)
  // =============================================================================

  function getStoredData(): { lastShown: number; action: 'dismissed' | 'clicked' } | null {
    try {
      const data = localStorage.getItem(CONFIG.STORAGE_KEY);
      return data ? JSON.parse(data) : null;
    } catch {
      return null;
    }
  }

  function setStoredData(action: 'dismissed' | 'clicked') {
    try {
      localStorage.setItem(CONFIG.STORAGE_KEY, JSON.stringify({
        lastShown: Date.now(),
        action
      }));
    } catch {
      // Storage unavailable
    }
  }

  function isInCooldown(): boolean {
    const data = getStoredData();
    if (!data) return false;

    const timeSinceShown = Date.now() - data.lastShown;

    if (data.action === 'clicked') {
      const cooldownMs = CONFIG.COOLDOWN_CLICKED_DAYS * 24 * 60 * 60 * 1000;
      return timeSinceShown < cooldownMs;
    } else {
      const cooldownMs = CONFIG.COOLDOWN_DISMISSED_MINS * 60 * 1000;
      return timeSinceShown < cooldownMs;
    }
  }

  // =============================================================================
  // Product Engagement Tracking (Intersection Observer)
  // =============================================================================

  function hasMetEngagementThreshold(): boolean {
    // User clicked a product OR viewed products for 10+ seconds
    // OR spent 20+ seconds on page AND scrolled 30%+ (content engagement)
    return hasClickedProduct || totalProductViewTime >= CONFIG.MIN_PRODUCT_VIEW_TIME;
  }

  function hasMetContentEngagement(): boolean {
    const timeOnPage = Date.now() - pageLoadTime;
    return timeOnPage >= CONFIG.MIN_TIME_ON_PAGE && maxScrollDepth >= CONFIG.MIN_SCROLL_DEPTH;
  }

  function setupProductObserver() {
    const products = document.querySelectorAll(PRODUCT_SELECTORS);
    if (products.length === 0) return;

    const observer = new IntersectionObserver((entries) => {
      const anyVisible = entries.some(entry => entry.isIntersecting);

      if (anyVisible && productViewStartTime === null) {
        // Started viewing products
        productViewStartTime = Date.now();
      } else if (!anyVisible && productViewStartTime !== null) {
        // Stopped viewing products - accumulate time
        totalProductViewTime += Date.now() - productViewStartTime;
        productViewStartTime = null;
      }
    }, {
      threshold: 0.5 // At least 50% of product visible
    });

    products.forEach(product => observer.observe(product));

    // Track product clicks
    products.forEach(product => {
      product.addEventListener('click', () => {
        hasClickedProduct = true;
      });
    });

    // Also track Amazon link clicks within products
    document.querySelectorAll('a[href*="amazon"]').forEach(link => {
      link.addEventListener('click', () => {
        hasClickedProduct = true;
      });
    });
  }

  // Finalize view time when checking (in case still viewing)
  function getCurrentViewTime(): number {
    if (productViewStartTime !== null) {
      return totalProductViewTime + (Date.now() - productViewStartTime);
    }
    return totalProductViewTime;
  }

  function hasMetEngagementThresholdNow(): boolean {
    return hasClickedProduct || getCurrentViewTime() >= CONFIG.MIN_PRODUCT_VIEW_TIME || hasMetContentEngagement();
  }

  // =============================================================================
  // Show/Hide Popup
  // =============================================================================

  function showPopup() {
    if (isInCooldown() || hasTriggered || isShowing || !hasMetEngagementThresholdNow()) {
      return;
    }

    hasTriggered = true;
    isShowing = true;

    if (popup && overlay) {
      popup.classList.remove('opacity-0', 'pointer-events-none', 'scale-95');
      popup.classList.add('opacity-100', 'scale-100');
      popup.setAttribute('aria-hidden', 'false');

      overlay.classList.remove('opacity-0', 'pointer-events-none');
      overlay.classList.add('opacity-100');
      overlay.setAttribute('aria-hidden', 'false');

      closeBtn?.focus();
    }
  }

  function hidePopup(action: 'dismissed' | 'clicked' = 'dismissed') {
    if (popup && overlay) {
      popup.classList.add('opacity-0', 'pointer-events-none', 'scale-95');
      popup.classList.remove('opacity-100', 'scale-100');
      popup.setAttribute('aria-hidden', 'true');

      overlay.classList.add('opacity-0', 'pointer-events-none');
      overlay.classList.remove('opacity-100');
      overlay.setAttribute('aria-hidden', 'true');

      isShowing = false;
      setStoredData(action);
    }
  }

  // =============================================================================
  // Desktop: Mouse Exit Intent
  // =============================================================================

  function handleMouseLeave(e: MouseEvent) {
    if (e.clientY <= 0) {
      showPopup();
    }
  }

  // =============================================================================
  // Mobile: Scroll-Up Velocity Detection
  // =============================================================================

  function handleScroll() {
    // Track max scroll depth for content engagement
    const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
    if (scrollHeight > 0) {
      const currentDepth = window.scrollY / scrollHeight;
      if (currentDepth > maxScrollDepth) maxScrollDepth = currentDepth;
    }

    if (isMobile && hasMetEngagementThresholdNow()) {
      const now = Date.now();
      const timeDelta = now - lastScrollTime;

      if (timeDelta > 50) {
        const scrollDelta = window.scrollY - lastScrollY;
        const velocity = (scrollDelta / timeDelta) * 100;

        if (velocity < CONFIG.SCROLL_UP_THRESHOLD && window.scrollY > 200) {
          showPopup();
        }

        lastScrollY = window.scrollY;
        lastScrollTime = now;
      }

      resetIdleTimer();
    }
  }

  // =============================================================================
  // Mobile: Idle Timeout
  // =============================================================================

  function resetIdleTimer() {
    if (idleTimer) clearTimeout(idleTimer);

    if (isMobile && hasMetEngagementThresholdNow() && !hasTriggered) {
      idleTimer = setTimeout(() => {
        showPopup();
      }, CONFIG.MOBILE_IDLE_TIMEOUT);
    }
  }

  // =============================================================================
  // Initialize
  // =============================================================================

  if (!isInCooldown()) {
    // Setup product visibility tracking
    setupProductObserver();

    // Track scroll for exit intent (mobile triggers + scroll depth tracking for all)
    window.addEventListener('scroll', handleScroll, { passive: true });

    // Desktop: mouse exit (works with both product engagement AND content engagement)
    if (!isMobile) {
      document.addEventListener('mouseleave', handleMouseLeave);
    }

    // Mobile: check periodically for engagement threshold
    if (isMobile) {
      setInterval(() => {
        if (hasMetEngagementThresholdNow() && !hasTriggered) {
          resetIdleTimer();
        }
      }, 2000);
    }
  }

  // Close handlers
  closeBtn?.addEventListener('click', () => hidePopup('dismissed'));
  overlay?.addEventListener('click', () => hidePopup('dismissed'));

  // Track popup CTA clicks for longer cooldown
  ctaLink?.addEventListener('click', () => {
    setStoredData('clicked');
  });

  // Escape key to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isShowing) {
      hidePopup('dismissed');
    }
  });
</script>
