---
interface Props {
  title: string;
  quote: string;
  author: string;
  amazonReviewLink?: string;
}

const { title, quote, author, amazonReviewLink } = Astro.props;
---

<article class="bg-white rounded-2xl shadow-lg p-8 transition-smooth hover:shadow-xl">
  <div class="flex items-center gap-1 mb-4">
    {[1, 2, 3, 4, 5].map(() => (
      <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <h3 class="font-display text-xl font-bold text-charcoal mb-3">"{title}"</h3>

  <blockquote class="text-gray-600 italic mb-4 leading-relaxed">
    "{quote}"
  </blockquote>

  <div class="flex items-center justify-between">
    <p class="font-semibold text-charcoal">â€” {author}</p>
    {amazonReviewLink && (
      <a
        href={amazonReviewLink}
        target="_blank"
        rel="noopener"
        class="text-saffron hover:text-saffron-dark text-sm font-medium flex items-center gap-1"
      >
        View on Amazon
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    )}
  </div>
</article>
