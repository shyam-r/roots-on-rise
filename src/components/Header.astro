---
interface Props {
  showAnnouncement?: boolean;
  announcementText?: string;
  announcementLink?: string;
}

const {
  showAnnouncement = false,
  announcementText = "FREE SHIPPING ON ORDERS OVER $50 | SHOP OUR BESTSELLERS",
  announcementLink = "/books"
} = Astro.props;

const navItems = [
  { name: 'Books', href: '/books' },
  { name: 'Wall Art', href: '/wall-art' },
  { name: 'Games & Toys', href: '/games-toys' },
  { name: 'Downloads', href: '/digital-downloads' },
  { name: 'Our Story', href: '/our-story' },
  { name: 'About', href: '/about' },
  { name: 'Blog', href: '/blog' },
];

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<header id="site-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <!-- Announcement Bar -->
  {showAnnouncement && (
    <a
      id="announcement-bar"
      href={announcementLink}
      class="announcement-bar block bg-primary text-light text-center py-2.5 px-4 text-sm font-medium tracking-wide hover:bg-primary-dark transition-all duration-300"
    >
      {announcementText}
    </a>
  )}

  <!-- Main header content -->
  <div id="header-main" class="bg-tertiary text-dark border-b border-secondary/20 transition-all duration-500">

    <!-- EXPANDED STATE: Centered two-row layout -->
    <div id="header-expanded" class="transition-all duration-500">
      <!-- Row 1: Centered Logo with name -->
      <div class="flex items-center justify-center py-3 md:py-4 relative">
        <!-- Mobile Menu Button (Right side on mobile) -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden absolute right-4 p-2 text-dark/70 hover:text-primary transition-colors duration-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary rounded w-10 h-10 flex items-center justify-center"
          aria-label="Open navigation menu"
          aria-expanded="false"
          aria-controls="mobile-drawer"
        >
          <span class="sr-only">Menu</span>
          <span id="hamburger-icon" class="block w-6 h-5 relative">
            <span class="hamburger-line absolute left-0 w-full h-0.5 bg-current rounded transition-all duration-300 top-0"></span>
            <span class="hamburger-line absolute left-0 w-full h-0.5 bg-current rounded transition-all duration-300 top-1/2 -translate-y-1/2"></span>
            <span class="hamburger-line absolute left-0 w-full h-0.5 bg-current rounded transition-all duration-300 bottom-0"></span>
          </span>
