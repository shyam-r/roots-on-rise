---
const navItems = [
  { name: 'Books', href: '/books' },
  { name: 'Wall Art', href: '/wall-art' },
  { name: 'Games & Toys', href: '/games-toys' },
  { name: 'Downloads', href: '/digital-downloads' },
  { name: 'Our Story', href: '/our-story' },
  { name: 'About', href: '/about' },
];

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<header id="site-header" class="fixed top-0 left-0 right-0 z-50 transition-shadow duration-300">
  <!-- Scroll Progress Bar -->
  <div id="scroll-progress" class="h-0.5 bg-primary origin-left scale-x-0 transition-transform duration-100"></div>

  <!-- Top announcement bar -->
  <div id="announcement-bar" class="bg-primary text-light py-2 text-center text-sm transition-all duration-300">
    <a href="https://www.amazon.com/dp/8195870724" target="_blank" rel="noopener" class="hover:underline focus-visible:underline focus-visible:outline-none">
      Namaste! Shop our books on Amazon for fast Prime delivery
    </a>
  </div>

  <!-- Main header content -->
  <div class="bg-tertiary text-dark border-b border-secondary/20">
    <div class="mx-auto max-w-screen-2xl flex flex-wrap gap-4 justify-between items-center px-5 py-3 md:py-4">
      <!-- Logo -->
      <a class="flex items-center focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary rounded" href="/">
        <img
          src="/images/brand/Brand-Logo-Name-Transparent-Background.svg"
          alt="Roots On Rise - Embrace, Elevate, Inspire"
          class="h-16 md:h-20 lg:h-24 w-auto"
        />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex flex-wrap gap-x-6 gap-y-2 items-center md:text-lg font-medium" aria-label="Main navigation">
        {navItems.map((item) => {
          const isActive = currentPath === item.href || currentPath.startsWith(item.href + '/');
          return (
            <a
              href={item.href}
              class:list={[
                "relative py-1 transition-colors duration-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary rounded text-dark/80",
                "hover:text-primary",
                { "text-primary font-semibold": isActive }
              ]}
              aria-current={isActive ? "page" : undefined}
            >
              {item.name}
              {item.comingSoon && (
                <span class="absolute -top-2 -right-4 text-[10px] bg-primary/80 px-1.5 py-0.5 rounded-full">
                  soon
                </span>
              )}
              {/* Active indicator underline */}
              <span
