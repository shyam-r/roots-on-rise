  button[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }

  button[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  button[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: translateY(-10px) rotate(-45deg);
  }

  /* Mobile drawer open state */
  #mobile-drawer.open {
    transform: translateX(0) !important;
  }

  #mobile-overlay.open {
    opacity: 1;
    pointer-events: auto;
  }

  /* Staggered animation for mobile nav links */
  .mobile-nav-link {
    opacity: 0;
    transform: translateX(20px);
    transition: opacity 0.3s ease, transform 0.3s ease, background-color 0.2s ease, padding-left 0.2s ease, color 0.2s ease;
  }

  #mobile-drawer.open .mobile-nav-link {
    opacity: 1;
    transform: translateX(0);
    transition-delay: var(--delay, 0ms);
  }

  /* Focus visible styles */
  *:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Social media brand colors on hover */
  .social-instagram:hover {
    color: #E1306C;
  }

  .social-youtube:hover {
    color: #FF0000;
  }

  .social-tiktok:hover {
    color: #00f7ef;
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }

    #scroll-progress {
      display: none;
    }
  }
</style>

<script>
  // DOM Elements
  const header = document.getElementById('site-header');
  const scrollProgress = document.getElementById('scroll-progress');
  const headerSpacer = document.getElementById('header-spacer');
  const headerExpanded = document.getElementById('header-expanded');
  const headerMinimized = document.getElementById('header-minimized');
  const menuBtn = document.getElementById('mobile-menu-btn');
  const menuBtnMin = document.getElementById('mobile-menu-btn-min');
  const closeBtn = document.getElementById('mobile-close-btn');
  const mobileDrawer = document.getElementById('mobile-drawer');
  const mobileOverlay = document.getElementById('mobile-overlay');

  // State
  let isMinimized = false;

  // Store focusable elements for focus trap
  let focusableElements: HTMLElement[] = [];
  let firstFocusable: HTMLElement | null = null;
  let lastFocusable: HTMLElement | null = null;

  // Update header spacer height
  function updateHeaderHeight() {
    if (header && headerSpacer) {
      const height = header.offsetHeight;
      headerSpacer.style.setProperty('--header-height', `${height}px`);
      headerSpacer.style.height = `${height}px`;
    }
  }

  // Minimize header function
  function minimizeHeader() {
    if (isMinimized) return;
    isMinimized = true;

    if (header) {
      header.classList.add('minimized');
    }

    // Update spacer after transition
    setTimeout(updateHeaderHeight, 500);
  }

  // Expand header function (when scrolled to top)
  function expandHeader() {
    if (!isMinimized) return;
    isMinimized = false;

    if (header) {
      header.classList.remove('minimized');
    }

    // Update spacer after transition
    setTimeout(updateHeaderHeight, 500);
  }

  // Scroll handler
  let ticking = false;
  let lastScrollY = 0;

  function handleScroll() {
    if (!ticking) {
      requestAnimationFrame(() => {
        const scrollY = window.scrollY;
        const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;

        // Minimize when scrolling down past threshold
        if (scrollY > 50) {
          minimizeHeader();
        } else if (scrollY <= 10) {
          // Expand when at top
          expandHeader();
        }

        // Scroll progress bar
        if (scrollProgress && scrollHeight > 0) {
          const progress = Math.min(scrollY / scrollHeight, 1);
          scrollProgress.style.transform = `scaleX(${progress})`;
        }

        lastScrollY = scrollY;
        ticking = false;
      });
      ticking = true;
    }
  }

  // Mobile menu functions
  function openMobileMenu() {
    if (!mobileDrawer || !mobileOverlay) return;

    // Update aria states on both buttons
    menuBtn?.setAttribute('aria-expanded', 'true');
    menuBtnMin?.setAttribute('aria-expanded', 'true');
    mobileDrawer.setAttribute('aria-hidden', 'false');

    // Add open classes and remove translate
    mobileDrawer.classList.add('open');
    mobileDrawer.classList.remove('translate-x-full');
    mobileOverlay.classList.add('open');

    // Prevent body scroll
    document.body.style.overflow = 'hidden';

    // Setup focus trap
    setupFocusTrap();

    // Focus close button after animation
    setTimeout(() => {
      closeBtn?.focus();
    }, 100);
  }

  function closeMobileMenu() {
    if (!mobileDrawer || !mobileOverlay) return;

    // Update aria states
    menuBtn?.setAttribute('aria-expanded', 'false');
    menuBtnMin?.setAttribute('aria-expanded', 'false');
    mobileDrawer.setAttribute('aria-hidden', 'true');

    // Remove open classes and add translate back
    mobileDrawer.classList.remove('open');
    mobileDrawer.classList.add('translate-x-full');
    mobileOverlay.classList.remove('open');

    // Restore body scroll
    document.body.style.overflow = '';

    // Return focus to appropriate menu button
    if (isMinimized) {
      menuBtnMin?.focus();
    } else {
      menuBtn?.focus();
    }
  }

  function setupFocusTrap() {
    if (!mobileDrawer) return;

    focusableElements = Array.from(
      mobileDrawer.querySelectorAll<HTMLElement>(
        'a[href], button:not([disabled]), textarea:not([disabled]), input:not([disabled]), select:not([disabled]), [tabindex]:not([tabindex="-1"])'
      )
    );

    firstFocusable = focusableElements[0] || null;
    lastFocusable = focusableElements[focusableElements.length - 1] || null;
  }

  function handleFocusTrap(e: KeyboardEvent) {
    if (!mobileDrawer?.classList.contains('open')) return;

    if (e.key === 'Tab') {
      if (e.shiftKey) {
        if (document.activeElement === firstFocusable) {
          e.preventDefault();
          lastFocusable?.focus();
        }
      } else {
        if (document.activeElement === lastFocusable) {
          e.preventDefault();
          firstFocusable?.focus();
        }
      }
    }
  }

  function handleKeydown(e: KeyboardEvent) {
    if (e.key === 'Escape' && mobileDrawer?.classList.contains('open')) {
      closeMobileMenu();
    }
    handleFocusTrap(e);
  }

  // Event listeners
  window.addEventListener('scroll', handleScroll, { passive: true });
  window.addEventListener('resize', updateHeaderHeight, { passive: true });
  document.addEventListener('keydown', handleKeydown);

  menuBtn?.addEventListener('click', openMobileMenu);
  menuBtnMin?.addEventListener('click', openMobileMenu);
  closeBtn?.addEventListener('click', closeMobileMenu);
  mobileOverlay?.addEventListener('click', closeMobileMenu);

  // Close menu when clicking a nav link
  mobileDrawer?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      setTimeout(closeMobileMenu, 100);
    });
  });

  // Initial setup
  updateHeaderHeight();
  handleScroll();

  // Update height when fonts/images load
  window.addEventListener('load', updateHeaderHeight);
</script>
