<style>
  /* Sticky header shadow when scrolled */
  #site-header.scrolled {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  /* Hide announcement bar when scrolled (on smaller screens) */
  @media (max-width: 768px) {
    #site-header.scrolled #announcement-bar {
      max-height: 0;
      padding-top: 0;
      padding-bottom: 0;
      opacity: 0;
      overflow: hidden;
    }
  }

  /* Hamburger to X animation */
  #mobile-menu-btn[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
  }

  #mobile-menu-btn[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  #mobile-menu-btn[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: translateY(-10px) rotate(-45deg);
  }

  /* Mobile drawer open state */
  #mobile-drawer.open {
    transform: translateX(0);
  }

  #mobile-overlay.open {
    opacity: 1;
    pointer-events: auto;
  }

  /* Staggered animation for mobile nav links */
  .mobile-nav-link {
    opacity: 0;
    transform: translateX(20px);
    transition: opacity 0.3s ease, transform 0.3s ease, background-color 0.2s ease, padding-left 0.2s ease, color 0.2s ease;
  }

  #mobile-drawer.open .mobile-nav-link {
    opacity: 1;
    transform: translateX(0);
    transition-delay: var(--delay, 0ms);
  }

  /* Focus visible styles for better keyboard navigation */
  *:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Reduce motion for users who prefer it */
  @media (prefers-reduced-motion: reduce) {
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }

    #scroll-progress {
      display: none;
    }
  }
</style>

<script>
  // DOM Elements
  const header = document.getElementById('site-header');
  const scrollProgress = document.getElementById('scroll-progress');
  const headerSpacer = document.getElementById('header-spacer');
  const announcementBar = document.getElementById('announcement-bar');
  const menuBtn = document.getElementById('mobile-menu-btn');
  const closeBtn = document.getElementById('mobile-close-btn');
  const mobileDrawer = document.getElementById('mobile-drawer');
  const mobileOverlay = document.getElementById('mobile-overlay');

  // Store focusable elements for focus trap
  let focusableElements: HTMLElement[] = [];
  let firstFocusable: HTMLElement | null = null;
  let lastFocusable: HTMLElement | null = null;

  // Update header spacer height to match actual header height
  function updateHeaderHeight() {
    if (header && headerSpacer) {
      const height = header.offsetHeight;
      headerSpacer.style.setProperty('--header-height', `${height}px`);
      headerSpacer.style.height = `${height}px`;
    }
  }

  // Auto-hide announcement bar after 5 seconds on landing page
  function hideAnnouncementBar() {
    if (announcementBar) {
      // Animate out with slide up and fade
      announcementBar.style.maxHeight = announcementBar.offsetHeight + 'px';
      announcementBar.style.overflow = 'hidden';

      // Trigger reflow for animation
      announcementBar.offsetHeight;

      // Animate
      announcementBar.style.maxHeight = '0';
      announcementBar.style.paddingTop = '0';
      announcementBar.style.paddingBottom = '0';
      announcementBar.style.opacity = '0';

      // Update header height after animation completes
      setTimeout(() => {
        announcementBar.style.display = 'none';
        updateHeaderHeight();
      }, 300);
    }
  }

  // Auto-hide announcement bar 5 seconds after page load
  setTimeout(hideAnnouncementBar, 5000);

  // Scroll handler for sticky header and progress bar
  let ticking = false;
  function handleScroll() {
    if (!ticking) {
      requestAnimationFrame(() => {
        const scrollY = window.scrollY;
        const scrollHeight = document.documentElement.scrollHeight - window.innerHeight;

        // Sticky header shadow
        if (header) {
          if (scrollY > 10) {
            header.classList.add('scrolled');
          } else {
            header.classList.remove('scrolled');
          }
        }

        // Scroll progress
        if (scrollProgress && scrollHeight > 0) {
          const progress = Math.min(scrollY / scrollHeight, 1);
          scrollProgress.style.transform = `scaleX(${progress})`;
        }

        ticking = false;
      });
      ticking = true;
    }
  }

  // Mobile menu functions
  function openMobileMenu() {
    if (!mobileDrawer || !mobileOverlay || !menuBtn) return;

    // Update aria states
    menuBtn.setAttribute('aria-expanded', 'true');
    mobileDrawer.setAttribute('aria-hidden', 'false');

    // Add open classes
    mobileDrawer.classList.add('open');
    mobileOverlay.classList.add('open');

    // Prevent body scroll
    document.body.style.overflow = 'hidden';

    // Setup focus trap
    setupFocusTrap();

    // Focus close button after animation
    setTimeout(() => {
      closeBtn?.focus();
    }, 100);
  }

  function closeMobileMenu() {
    if (!mobileDrawer || !mobileOverlay || !menuBtn) return;

    // Update aria states
    menuBtn.setAttribute('aria-expanded', 'false');
    mobileDrawer.setAttribute('aria-hidden', 'true');

    // Remove open classes
    mobileDrawer.classList.remove('open');
    mobileOverlay.classList.remove('open');

    // Restore body scroll
    document.body.style.overflow = '';

    // Return focus to menu button
    menuBtn.focus();
  }

  function setupFocusTrap() {
    if (!mobileDrawer) return;

    // Get all focusable elements in the drawer
    focusableElements = Array.from(
      mobileDrawer.querySelectorAll<HTMLElement>(
        'a[href], button:not([disabled]), textarea:not([disabled]), input:not([disabled]), select:not([disabled]), [tabindex]:not([tabindex="-1"])'
      )
    );

    firstFocusable = focusableElements[0] || null;
    lastFocusable = focusableElements[focusableElements.length - 1] || null;
  }

  function handleFocusTrap(e: KeyboardEvent) {
    if (!mobileDrawer?.classList.contains('open')) return;

    if (e.key === 'Tab') {
      if (e.shiftKey) {
        // Shift + Tab
        if (document.activeElement === firstFocusable) {
          e.preventDefault();
          lastFocusable?.focus();
        }
      } else {
        // Tab
        if (document.activeElement === lastFocusable) {
          e.preventDefault();
          firstFocusable?.focus();
        }
      }
    }
  }

  // Keyboard handler
  function handleKeydown(e: KeyboardEvent) {
    // Close menu on Escape
    if (e.key === 'Escape' && mobileDrawer?.classList.contains('open')) {
      closeMobileMenu();
    }

    // Focus trap
    handleFocusTrap(e);
  }

  // Event listeners
  window.addEventListener('scroll', handleScroll, { passive: true });
  window.addEventListener('resize', updateHeaderHeight, { passive: true });
  document.addEventListener('keydown', handleKeydown);

  menuBtn?.addEventListener('click', openMobileMenu);
  closeBtn?.addEventListener('click', closeMobileMenu);
  mobileOverlay?.addEventListener('click', closeMobileMenu);

  // Close menu when clicking a nav link
  mobileDrawer?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      // Small delay to allow navigation
      setTimeout(closeMobileMenu, 100);
    });
  });

  // Initial setup
  updateHeaderHeight();
  handleScroll();

  // Update height when fonts/images load
  window.addEventListener('load', updateHeaderHeight);
</script>
