---
const navItems = [
  { name: 'Books', href: '/books' },
  { name: 'Wall Art', href: '/wall-art', comingSoon: true },
  { name: 'Games & Toys', href: '/games-toys', comingSoon: true },
  { name: 'Downloads', href: '/digital-downloads', comingSoon: true },
  { name: 'Our Story', href: '/our-story' },
  { name: 'About', href: '/about' },
];
---

<header class="bg-dark text-light mx-auto max-w-screen-2xl">
  <!-- Top announcement bar -->
  <div class="bg-primary text-light py-2 text-center text-sm">
    <a href="https://www.amazon.com/dp/8195870724" target="_blank" rel="noopener" class="hover:underline">
      üôè Namaste! Shop our books on Amazon for fast Prime delivery ‚Üí
    </a>
  </div>

  <div class="mx-auto flex flex-wrap gap-4 justify-between items-center px-5 py-5 md:py-6">
    <!-- Logo -->
    <a class="flex items-center space-x-3" href="/">
      <img
        src="https://rootsonrise.com/cdn/shop/files/Less_Borders_Better_logo.webp?v=1700592383&width=600"
        alt="Roots On Rise"
        class="h-10 w-auto brightness-0 invert"
      />
      <span class="font-bold font-title text-2xl md:text-3xl">Roots On Rise</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex flex-wrap gap-x-6 gap-y-2 items-center md:text-lg">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="hover:text-primary transition-colors relative"
        >
          {item.name}
          {item.comingSoon && (
            <span class="absolute -top-2 -right-4 text-[10px] bg-primary/80 px-1.5 py-0.5 rounded-full">
              soon
            </span>
          )}
        </a>
