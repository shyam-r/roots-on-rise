---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  type?: 'website' | 'article' | 'product';
  noindex?: boolean;
  showAnnouncement?: boolean;
  announcementText?: string;
  announcementLink?: string;
}

const {
  title,
  description = "Discover beautifully illustrated children's books and cultural products. Explore mythology, shloka and mantra books for kids ages 2-8. Perfect gifts for children.",
  image = "/images/books-optimized/marvelous-hindu-deities/boardbook/promo_shot_7-hero.webp",
  canonicalUrl,
  type = "website",
  noindex = false,
  showAnnouncement = true,
  announcementText = "FREE SHIPPING ON ORDERS OVER $50 | SHOP OUR BESTSELLERS",
  announcementLink = "/books"
} = Astro.props;

// Construct canonical URL
const siteUrl = "https://rootsonrise.com";
const canonical = canonicalUrl || new URL(Astro.url.pathname, siteUrl).href;

// Full image URL for social sharing
const ogImage = image.startsWith('http') ? image : `${siteUrl}${image}`;

// Structured data for Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Roots On Rise",
  "url": siteUrl,
  "logo": `${siteUrl}/images/brand/Brand-Logo-Name-Transparent-Background.svg`,
  "description": "Children's books and cultural products celebrating mythology and heritage.",
  "sameAs": [
    "https://www.instagram.com/rootsonrise"
  ]
};

// Website schema for search
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Roots On Rise",
  "url": siteUrl,
  "description": "Children's books, shloka books, and cultural products for kids"
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google tag (gtag.js) â€” cookieless, aggregate-only tracking -->
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('consent', 'default', {
        'ad_storage': 'denied',
        'ad_user_data': 'denied',
        'ad_personalization': 'denied',
        'analytics_storage': 'denied',
        'functionality_storage': 'denied',
        'personalization_storage': 'denied'
      });
    </script>
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-808RJZVSHQ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-808RJZVSHQ', {
        anonymize_ip: true,
        allow_google_signals: false,
        allow_ad_personalization_signals: false
      });
    </script>

    <!-- Copyright -->
    <meta name="copyright" content="Roots On Rise. All rights reserved." />
    <meta name="rights" content="All illustrations are copyrighted by Roots On Rise. Unauthorized reproduction prohibited." />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />

    <!-- Robots -->
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Preload hero image for LCP optimization -->
    <link rel="preload" as="image" href="/images/books-optimized/marvelous-hindu-deities/boardbook/hero-shot-1-hero.webp" type="image/webp" fetchpriority="high" />

    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:site_name" content="Roots On Rise" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Roots On Rise - Children's Books & Cultural Products" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@rootsonrise" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content="Roots On Rise - Children's Books & Cultural Products" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

    <!-- Additional structured data slot for pages -->
    <slot name="structured-data" />

    <!-- Image copy protection -->
    <style is:inline>
      img { -webkit-user-drag: none; user-select: none; pointer-events: none; }
      .protected-img { position: relative; }
      .protected-img::after {
        content: '';
        position: absolute;
        inset: 0;
        z-index: 1;
      }
      /* Hide images when printing */
      @media print {
        img { visibility: hidden !important; }
        body::before {
          content: 'Images are copyrighted by Roots On Rise and cannot be printed.';
          display: block;
          text-align: center;
          padding: 2rem;
          font-size: 1.2rem;
          color: #666;
        }
      }
    </style>
    <script is:inline>
      /* Block right-click on images */
      document.addEventListener('contextmenu', function(e) {
        if (e.target.tagName === 'IMG') e.preventDefault();
      });
      /* Block drag on images */
      document.addEventListener('dragstart', function(e) {
        if (e.target.tagName === 'IMG') e.preventDefault();
      });
      /* Blur images when tab loses focus (deters screen recording) */
      document.addEventListener('visibilitychange', function() {
        var imgs = document.querySelectorAll('img[src*="/deities/"]');
        imgs.forEach(function(img) {
          img.style.filter = document.hidden ? 'blur(20px)' : 'none';
          img.style.transition = 'filter 0.3s';
        });
      });
      /* Block common screenshot keyboard shortcuts */
      document.addEventListener('keyup', function(e) {
        if (e.key === 'PrintScreen') {
          navigator.clipboard.writeText('');
          alert('Screenshots of copyrighted images are not permitted.');
        }
      });
    </script>
  </head>
  <body class="bg-[#f5f5f5]">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <main id="main-content" class="max-w-screen-2xl mx-auto bg-white">
      <Header
        showAnnouncement={showAnnouncement}
        announcementText={announcementText}
        announcementLink={announcementLink}
      />
      <slot />
      <Footer />
    </main>
  </body>
</html>
