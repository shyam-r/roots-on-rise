{
  "permissions": {
    "allow": [
      "mcp__memory__search_nodes",
      "Skill(superpowers:using-git-worktrees)",
      "Bash(git worktree:*)",
      "mcp__plugin_serena_serena__list_dir",
      "Bash(git check-ignore:*)",
      "Bash(echo:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(npm install:*)",
      "mcp__memory__create_entities"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/refresh-amazon-token.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/refresh-amazon-token.sh"
          }
        ]
      }
    ]
  }
}
